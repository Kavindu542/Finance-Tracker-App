<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_rounded"
    android:backgroundTint="#E2474747"
    android:clipToOutline="true"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingStart="40dp"
    android:paddingLeft="20dp"
    android:paddingEnd="40dp"
    android:paddingRight="20dp">

    <!-- Filter Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/filter_transaction"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Reset Button -->
    <TextView
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="8dp"
        android:text="@string/reset"
        android:textColor="@color/primary_purple"
        android:textSize="14sp" />

    <!-- Filter By -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/filter_by"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/type_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/income_radio"
            style="@style/PillRadioButton"
            android:text="Income"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/expense_radio"
            style="@style/PillRadioButton"
            android:text="Expense"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/transfer_radio"
            style="@style/PillRadioButton"
            android:text="@string/transfer"
            android:textColor="@color/black"/>
    </RadioGroup>

    <!-- Sort By -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sort_by"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/sort_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/highest_radio"
            style="@style/PillRadioButton"
            android:text="@string/highest"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/lowest_radio"
            style="@style/PillRadioButton"
            android:text="@string/lowest"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/newest_radio"
            style="@style/PillRadioButton"
            android:text="@string/newest"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/oldest_radio"
            style="@style/PillRadioButton"
            android:layout_width="74dp"
            android:text="@string/oldest"
            android:textColor="@color/black"/>
    </RadioGroup>

    <!-- Category -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/category"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp" />

    <!-- Apply Button -->
    <Button
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_button_rounded"
        android:backgroundTint="@color/primary_purple"
        android:text="@string/apply"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>
