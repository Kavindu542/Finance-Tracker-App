<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_purple</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="PillRadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_radio_pill</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
    </style>

</resources>