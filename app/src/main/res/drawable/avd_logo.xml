<?xml version="1.0" encoding="utf-8"?>
<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/ic_logo">

    <!-- Animate the top curve -->
    <target
        android:name="top_curve"
        android:animation="@animator/draw_top_curve" />

    <!-- Animate the bottom curve -->
    <target
        android:name="bottom_curve"
        android:animation="@animator/draw_bottom_curve" />

    <!-- Animate the vertical line -->
    <target
        android:name="vertical_line"
        android:animation="@animator/draw_vertical_line" />
</animated-vector>